{
  "name": "floorplan-pro-desktop",
  "productName": "FloorPlan Pro",
  "version": "1.0.0",
  "description": "Professional CAD Floor Plan Design & Analysis Software",
  "main": "electron-main.js",
  "author": "FloorPlan Pro Team",
  "license": "Proprietary",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --x64",
    "dist": "electron-builder --win --x64 --publish never"
  },
  "build": {
    "appId": "com.floorplanpro.desktop",
    "productName": "FloorPlan Pro",
    "copyright": "Copyright Â© 2025 FloorPlan Pro Team",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/**/@tensorflow/tfjs-node/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "FloorPlan Pro",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "fileAssociations": [
        {
          "ext": "dxf",
          "name": "DXF File",
          "description": "AutoCAD DXF Drawing",
          "role": "Editor"
        },
        {
          "ext": "dwg",
          "name": "DWG File",
          "description": "AutoCAD DWG Drawing",
          "role": "Editor"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FloorPlan Pro",
      "perMachine": false,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      "menuCategory": true,
      "include": "build/installer.nsh",
      "warningsAsErrors": false,
      "installerLanguages": [
        "en_US"
      ],
      "language": "1033",
      "multiLanguageInstaller": false,
      "displayLanguageSelector": false
    },
    "extraResources": [
      {
        "from": "public",
        "to": "app/public",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "lib",
        "to": "app/lib",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^2.0.2",
    "dxf-parser": "^1.1.2"
  },
  "devDependencies": {
    "electron": "^33.3.0",
    "electron-builder": "^25.1.8"
  }
}